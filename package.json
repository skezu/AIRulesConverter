{
  "name": "ai-rules-converter",
  "displayName": "AI Rules Converter",
  "publisher": "skezu",
  "description": "Convert AI coding rules between Cursor, Windsurf, Kiro, and Antigravity formats.",
  "icon": "images/logo.png",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/skezu/RulesConverter.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rules-converter-view",
          "title": "Rules Converter",
          "icon": "$(symbol-ruler)"
        }
      ]
    },
    "views": {
      "rules-converter-view": [
        {
          "id": "detected-rules",
          "name": "Detected Rules"
        }
      ]
    },
    "commands": [
      {
        "command": "rulesConverter.refresh",
        "title": "Refresh Rules",
        "icon": "$(refresh)"
      },
      {
        "command": "rulesConverter.convertRule",
        "title": "Convert Rule"
      },
      {
        "command": "rulesConverter.openRule",
        "title": "Open Rule"
      },
      {
        "command": "rulesConverter.deleteRule",
        "title": "Delete Rule",
        "icon": "$(trash)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rulesConverter.refresh",
          "when": "view == detected-rules",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "rulesConverter.convertRule",
          "when": "view == detected-rules",
          "group": "inline"
        },
        {
          "command": "rulesConverter.deleteRule",
          "when": "view == detected-rules",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run build",
    "build": "node esbuild.js",
    "package": "node esbuild.js --production",
    "watch": "node esbuild.js --watch"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^16.x",
    "@types/vscode": "^1.80.0",
    "esbuild": "^0.27.0",
    "js-yaml": "^4.1.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}